<Window x:Class="DaCoder.DesktopClient.Views.PluginInstallerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Install plugin" Height="100" Width="310" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="File path:" />
        <!--Binds to the selected files path-->
        <TextBox Grid.Column="1" Grid.Row="0" Margin="3" />
        <!--Browse after file and when a file is selected, change to add. -->
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" MinWidth="80" Margin="3" Content="Install"  />
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" MinWidth="80" Margin="3" Content="Cancel"  />
        <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" MinWidth="20" Margin="3" Content="..."  />
    </Grid>
</Window>
