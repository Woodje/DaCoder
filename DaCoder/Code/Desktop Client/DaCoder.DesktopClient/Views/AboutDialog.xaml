<Window x:Class="DaCoder.DesktopClient.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About DaCoder" Height="200" Width="300">
    <Grid>
       
        <StackPanel>
            <TextBlock Margin="10" HorizontalAlignment="Center" TextAlignment="Center">
            Made by the kings!
            <LineBreak />
            Simon and Kristoffer
            </TextBlock>

            <TextBlock Margin="10" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" >
                        <Bold>Version</Bold>
                <LineBreak />
                1.0
            </TextBlock>
            
            <Button HorizontalAlignment="Center" MinWidth="80" Margin="10" Content="Close" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
